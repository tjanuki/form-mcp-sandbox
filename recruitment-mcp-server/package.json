{
  "name": "recruitment-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for recruitment management system - ChatGPT integration",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && node build.js",
    "start": "node dist/index.js",
    "start:http": "node dist/http-server.js",
    "dev": "tsx watch src/index.ts",
    "dev:http": "tsx watch src/http-server.ts",
    "inspect": "node --inspect dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "mcp",
    "recruitment",
    "chatgpt",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.2.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^22.10.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^4.0.17",
    "axios-mock-adapter": "^2.1.0",
    "esbuild": "^0.24.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.17"
  }
}
